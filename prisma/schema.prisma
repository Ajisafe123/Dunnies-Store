generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  fullName  String
  email     String   @unique
  phone     String?
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders            Order[]
  comments          ProductComment[]
  likes             ProductLike[]
  commentReplies    CommentReply[] @relation("CommentReplies")
  commentLikes      CommentLike[]
}

model Category {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  description String?
  imageUrl    String?
  type        String   @default("product") // "product", "gift", "grocery"
  priority    String   @default("normal") // "popular", "trending", "new", "normal"
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  products    Product[]
  
  @@unique([name, type])
}

model Product {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  description String
  price       Float
  imageUrl    String
  categoryId  String?
  priority    String   @default("normal") // "bestseller", "featured", "trending", "new", "normal"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  category    Category? @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  comments    ProductComment[]
  likes       ProductLike[]
}

model Gift {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  description String?
  price       Float
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Grocery {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  description String?
  price       Float
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id            String     @id @default(cuid()) @map("_id")
  userId        String?
  customerName  String
  customerEmail String
  customerPhone String
  total         Float
  status        String     @default("pending") // "pending", "confirmed", "shipped", "delivered", "cancelled"
  source        String     @default("site") // "site", "whatsapp", "other"
  notes         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user          User?      @relation(fields: [userId], references: [id])
  orderItems    OrderItem[]
}

model EmailLog {
  id        String   @id @default(cuid()) @map("_id")
  to        String
  subject   String
  body      String
  status    String   @default("sent") // "sent", "failed"
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid()) @map("_id")
  orderId   String
  productId String
  quantity  Int

  order     Order    @relation(fields: [orderId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}

model ProductComment {
  id        String   @id @default(cuid()) @map("_id")
  productId String
  userId    String
  text      String
  rating    Int      @default(5) // 1-5 stars
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product         Product          @relation(fields: [productId], references: [id], onDelete: Cascade)
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies         CommentReply[]
  likes           CommentLike[]

  @@index([productId])
  @@index([userId])
}

model CommentReply {
  id        String   @id @default(cuid()) @map("_id")
  commentId String
  userId    String
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comment   ProductComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user      User           @relation("CommentReplies", fields: [userId], references: [id], onDelete: Cascade)
  likes     CommentLike[]

  @@index([commentId])
  @@index([userId])
}

model CommentLike {
  id             String   @id @default(cuid()) @map("_id")
  userId         String
  commentId      String?
  replyId        String?
  createdAt      DateTime @default(now())

  user           User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment        ProductComment?   @relation(fields: [commentId], references: [id], onDelete: Cascade)
  reply          CommentReply?     @relation(fields: [replyId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId, replyId])
  @@index([userId])
  @@index([commentId])
  @@index([replyId])
}

model ProductLike {
  id        String   @id @default(cuid()) @map("_id")
  productId String
  userId    String
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([productId, userId])
  @@index([productId])
  @@index([userId])
}